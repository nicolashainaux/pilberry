# This is a simple tcp chat to a destination socket

# Python packages|modules imports
import sys
import subprocess
#import logging

# Pilberry packages|modules imports
from lib.carrier.Carrier import Carrier
from lib.globals import SOCKETS_CONFIG

SHORTCUTS = {'e' : 'CMD_A1',
             ' ' : 'CMD_A2',
             'j' : 'CMD_B1',
             'l' : 'CMD_C1',
             'i' : 'CMD_D1',
             'k' : 'CMD_E1',
             's' : 'CMD_E2',
             'Q' : 'QUIT',
             'D' : 'DONE',
             '+' : 'vol +5%',
             '-' : 'vol -5%'
             }

VOLUME_CMD = ['vol +5%', 'vol -5%']

HUMAN_TRANSLATION = {'e' : 'to_child',
                     ' ' : 'esc',
                     'j' : 'prev',
                     'l' : 'next',
                     'i' : 'parent',
                     'k' : 'select',
                     's' : 'stop',
                     'Q' : 'QUIT',
                     'D' : 'DONE',
                     '+' : 'volume UP',
                     '-' : 'volume DOWN'
                     }

class _Getch:
    def __init__(self):
        import tty, sys

    def __call__(self):
        import sys, tty, termios
        fd = sys.stdin.fileno()
        old_settings = termios.tcgetattr(fd)
        try:
            tty.setraw(sys.stdin.fileno())
            ch = sys.stdin.read(1)
        finally:
            termios.tcsetattr(fd, termios.TCSADRAIN, old_settings)
        return ch

user_entry = _Getch()


with Carrier() as C:
    print("ready")
    while True:
        y = user_entry()
        if "D" == y or "Q" == y:
            print("Shutting down.")
            #if "Q" == y:
            #    C.send('KEYPAD_TO_CORE', 'QUIT')
            sys.exit()

        elif y in SHORTCUTS.keys():
            x = SHORTCUTS[y]
            print(HUMAN_TRANSLATION[y])

            if x in VOLUME_CMD:
                #logging.debug('sending ' + x + ' via cmus-remote')
                subprocess.Popen(['cmus-remote',
                                  '--server',
                                  SOCKETS_CONFIG['TO_CMUS']['FILE'],
                                  '-C',
                                  x])
            else:
                C.send('KEYPAD_TO_CORE', x)





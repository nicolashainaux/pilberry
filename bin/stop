# Script that will stop all other pilberry components

# Python packages|modules imports
import subprocess
import re

# Pilberry packages|modules imports
from lib.globals import PID_FILE

##
#   @todo   Remove the dirty hack

def __main__():
    # dirty hack
    pid_file = re.sub("/bin", "", PID_FILE)

    AF_FILE_READ = open(pid_file, mode = 'r')
    display_pid = int(AF_FILE_READ.readlines()[0])
    subprocess.Popen(['kill', str(display_pid)])

    AF_FILE_READ = open(pid_file, mode = 'r')
    core_pid = int(AF_FILE_READ.readlines()[1])
    subprocess.Popen(['kill', str(core_pid)])

    AF_FILE_READ = open(pid_file, mode = 'r')
    volume_pid = int(AF_FILE_READ.readlines()[2])
    subprocess.Popen(['kill', str(volume_pid)])

    AF_FILE_READ = open(pid_file, mode = 'r')
    cmus_pid = int(AF_FILE_READ.readlines()[3])
    subprocess.Popen(['kill', str(cmus_pid)])



if __name__ == '__main__':
    __main__()





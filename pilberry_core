# Simple server script that waits for command, to test browsing a file system

# Python packages|modules imports
import time
import pickle
import socket
import sys, os
import RPIO
import logging
import logging.config

# Pilberry packages|modules imports
from lib.globals import SOCKETS_CONFIG, MODES_CONFIG, LOG_DIR
from lib.globals import cmd_match_list, modes_list
from lib.tree.Tree import Tree
import lib.globals as globals

logging.config.fileConfig(LOG_DIR + 'logging.conf')

# Get the socket file name from sockets' conf file
SOCKETS_PORTS = [int(SOCKETS_CONFIG['KEYPAD_TO_CORE']['PORT']),
                 int(SOCKETS_CONFIG['AUDIO_FEEDBACK_TO_CORE']['PORT'])
                 ]

tree_root = MODES_CONFIG[modes_list[0]]['ROOT_PATH']

if not os.path.isdir(tree_root):
    ##
    #   @todo   Tell something to LCD if the given root is not valid.
    print(tree_root + " is not a valid directory. Exiting")
    sys.exit()

globals.current_tree = Tree(root=tree_root)
t = globals.current_tree

def report():
    print("xnode is in: " + t.xnode.parent['full_path'])
    print("xnode is " \
          + t.xnode['file_name']\
          + " and has " \
          + str(len(t.xnode.children)) \
          + " children.")
    print("head is \033[32m" \
          + t.head['file_name']\
          + "\033[0m and has " \
          + str(len(t.head.children)) \
          + " children.")
    print("global.exploring: " + str(globals.exploring) \
          + "          global.cmus_status: "+ str(globals.cmus_status))
    result = ""
    for i in range(len(t.xnode.neighbours)):
        open_bracket = "["
        close_bracket = "]"
        if t.xnode.neighbours[i]['file_name'] == t.xnode['file_name']:
            open_bracket = "\033[33m<<"
            close_bracket = ">>\033[0m"

        result += open_bracket \
               + t.xnode.neighbours[i]['file_name'] \
               + close_bracket \
               + " "

    result += "\nWaiting for next command..."

    print(result)


report()

def cmd_callback(socket, data):
    raw_cmd = pickle.loads(data)
    if raw_cmd == 'QUIT':
        print("Shutting down server")
        sys.exit()
    else:
        try:
            cmd = cmd_match_list[raw_cmd]
        except KeyError:
            print("Received: \033[92m" + raw_cmd \
                            + ". Unknown command, no action\033[0m")

        else:
            print("Received: \033[92m" + cmd + "\033[0m")
            t.handle(cmd)

            report()


def cmus_callback(socket, data):
    notification = pickle.loads(data)
    if notification['status'] in globals.CMUS_NOTIFICATIONS:
        print("Received status notification: \033[31m" \
                + notification['status']
                + '\033[0m')
        globals.cmus_status = notification['status']
        if 'playing' == globals.cmus_status:
            if t.head['full_path'] != notification['full_path']:
            #___
                logging.debug("noticed that head doesn't match current song")
                # Current song doesn't match head node
                # Let's try to find the node matching current song
                # First, check if it's one of the song of the same 'directory'
                found = False
                for n in t.head.neighbours:
                    if n['full_path'] == notification['full_path']:
                        t.set_head(n)
                        found = True
                if found:
                    logging.debug("found the node matching current song")
                    print("Updated head Node, waiting for next command...\n")
                    if not globals.exploring:
                        t.set_xnode(t.head)
                ##
                #   @todo   If the right node is not among the neighbours, it has
                #           to be found elsewhere. In the best case, a data-
                #           base is available and we can find it thanks to its
                #           full path. If no database is available, then a
                #           search algorithm has to be found...


    else:
        print("Received UNKNOWN status notification: " + notification['status'])

    print("On full path: " + notification['full_path'])

    report()


RPIO.add_tcp_callback(SOCKETS_PORTS[0], cmd_callback)
RPIO.add_tcp_callback(SOCKETS_PORTS[1], cmus_callback)

# Blocking main epoll loop
RPIO.wait_for_interrupts()


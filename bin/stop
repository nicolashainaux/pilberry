# Script that will stop all other pilberry components

# Python packages|modules imports
import subprocess
import re

# Adafruit packages|modules imports
from lib.hardware_drivers.Adafruit_CharLCDPlate import Adafruit_CharLCDPlate

# Pilberry packages|modules imports
from lib.globals import PID_FILE

##
#   @todo   Remove the dirty hack

def __main__():

    lcd = Adafruit_CharLCDPlate()
    lcd.clear()
    lcd.message("Goodbye")
    # dirty hack
    pid_file = re.sub("/bin", "", PID_FILE)

    for i in range(4):
        AF_FILE_READ = open(pid_file, mode = 'r')
        pid = int(AF_FILE_READ.readlines()[i])
        subprocess.Popen(['kill', str(pid)])

    AF_FILE_READ = open(pid_file, mode = 'r')
    try:
        cmus_pid = int(AF_FILE_READ.readlines()[4])
    except:
        pass
    else:
        subprocess.Popen(['kill', str(cmus_pid)])



if __name__ == '__main__':
    __main__()




